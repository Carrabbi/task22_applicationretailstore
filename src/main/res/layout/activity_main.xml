<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ff0000">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/tvs1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:background="#000000"
            android:textSize="18sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_lego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/tvs1"
            android:padding="10dp"
            android:text="LEGO STORE"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/PopUpMenu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_lego"
            android:background="#ffffff"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:text="MENU"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnClr"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/PopUpMenu"
            android:layout_below="@id/tv_lego"
            android:background="#ffffff"
            android:onClick="onClickClr"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="Clear"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/tv_wit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PopUpMenu"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Witamy w naszym sklepie :)"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@id/tv_wit"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/image1"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/image2"
            android:layout_width="200dp"
            android:layout_height="120dp"

            android:layout_below="@id/tv_wit"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/image1"
            android:padding="10dp"
            android:layout_toEndOf="@+id/image1"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/image2"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv1"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/tv1"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:id="@+id/image3"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@id/tv1"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/tv3"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/image3"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/image4"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@id/tv2"
            android:layout_toRightOf="@id/image3"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_toEndOf="@id/image3"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/image4"
            android:layout_toRightOf="@id/tv3"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/tv3" />


        <ImageView
            android:id="@+id/image5"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@id/tv3"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/image5"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/image6"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_below="@id/tv4"
            android:layout_toRightOf="@id/image5"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/image5" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/image6"
            android:layout_toRightOf="@id/tv5"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/tv5" />





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>